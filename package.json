{
  "name": "gerencia-financas",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev-parcel": "cross-env NODE_ENV=development parcel serve index.html --target renderer",
    "start-electron": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev-parcel\" \"npm run start-electron\"",
    "build": "parcel build index.html --target renderer",
    "start": "npm run build && electron .",
    "postinstall": "electron-rebuild"
  },
  "targets": {
    "renderer": {
      "context": "browser",
      "distDir": "dist",
      "publicUrl": "./"
    }
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.1.2",
    "electron-rebuild": "^3.2.9",
    "parcel": "^2.16.0"
  }
}
